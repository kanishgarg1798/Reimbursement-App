<h1>Add Company</h1>

<%= form_with model: @company, local: true do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :employee_count %>
        <%= f.number_field :employee_count, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :reimbursement_sum %>
        <%= f.number_field :reimbursement_sum, class: 'form-control', step: :any %>
    </div>

    <%= f.submit 'Create Company', class: 'btn btn-primary' %>
<% end %>